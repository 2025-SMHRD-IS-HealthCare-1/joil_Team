<% layout('layout', { title: title || '회원가입' }) %>

<main class="auth-wrap">
  <form class="card auth-card" method="post" action="/signup">
    <h2>회원가입</h2>

    <% if (typeof msg === 'string' && msg) { %>
      <p class="err"><%= msg %></p>
    <% } %>

    <label>아이디</label>
    <input type="text" name="mem_id" required />

    <label>비밀번호</label>
    <input type="password" name="pwd" required />

    <label>이름</label>
    <input type="text" name="name" required />

    <label>전화번호</label>
    <input type="text" name="phone" placeholder="010-1234-5678" />

    <button type="submit">가입하기</button>

    <p class="hint"><a href="/login">로그인</a></p>
  </form>
</main>

<style>
.auth-wrap{display:grid;place-items:center;height:calc(100vh - 80px);}
.auth-card{width:360px;display:flex;flex-direction:column;gap:10px}
.auth-card input{height:36px;padding:6px 10px}
.err{color:#d00;margin:0 0 6px}
</style>
